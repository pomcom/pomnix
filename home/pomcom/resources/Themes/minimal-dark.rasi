/*-*- mode: css; -*-*/
/************************************************
 * ROFI Color theme
 * Minimal Dark
 * Author: George Lemanis
 * User: ZEDGR
 ***********************************************/

* {
  emphasis:   bold #990be6;
  text:       #dfdfdf;
  text-alt:   #b2b2b2;
  bg:         #282c34dd;

  spacing: 0;
  background-color: transparent;
  text-color: @text;
}

window {
  transparency: "real";
  fullscreen: true;
  background-color: @bg;
}

mainbox {
  padding: 30% 30%;
}

inputbar {
  margin: 0px 0px 0px 0px;
  children: [prompt, textbox-prompt-colon, entry, case-indicator];
}

prompt {
  text-color: @text;
}

textbox-prompt-colon {
  expand: false;
  str: ":";
  text-color: @text-alt;
}

entry {
  margin: 0px 0px;
  text-color: @text;
  placeholder: "";
}

listview {
  border: 0px;
  spacing: 5px;
  dynamic: true;
  scrollbar: false;
}

element {
  padding: 5px;
  border-radius: 3px;
}

element-text {
  highlight: @emphasis;
}

element normal normal, element selected normal, element alternate normal {
  text-color: @text;
  background-color: transparent;
}

element normal urgent, element selected urgent, element alternate urgent {
  text-color: @text;
  background-color: transparent;
}

element normal active, element selected active, element alternate active {
  text-color: @text;
  background-color: transparent;
}
